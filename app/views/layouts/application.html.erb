<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Social Eats | Home</title>

          <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
          <%= csrf_meta_tags %>

        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

    </head>
    <body>
        <main class="container left-container">
            <div class="row">
            <section class="sidebar col-md-5 col-sm-12" style="background-image: url(http://www.socialsamosa.com/wp-content/uploads/2015/10/food.jpg">
             <% if user_signed_in? %>
                <div id="menu-target">
                    <ul>
                        <li><img src="http://i.imgur.com/NJpHj7O.png" height="150" width="150"></li>
                        <li><i class="fa fa-home"></i><%= link_to "Home", events_path %></li>
                        <li><i class="fa fa-user"></i><%= link_to "Profile", user_path(current_user) %></li>
                        <li><i class="fa fa-users"></i><%= link_to "Friends", friendship_path(current_user) %></li>
                        <li><i class="fa fa-cutlery"></i><%= link_to "Locations", locations_path %></li>
                        <li><i class="fa fa-star"></i><%= link_to "Events", events_path %></li>
                    </ul>
                    <hr>
                    <ul>
                        <li><i class="fa fa-file"></i><%= link_to "Contact", contact_path %></li>
                        <li><i class="fa fa-plug"></i><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                    </ul>
                </div>
            <% end %>
            <% if user_signed_in? %>
                    <span class="menu-trigger animated fadeInDown">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </span>

                    <!-- if the user has javascript disabled they can still use the menu -->
                    <noscript>
                        <div class="no-js-menu">
                            <ul>
                                <li><img src="http://i.imgur.com/eLQvKIY.png" height="150" width="150"></li>
                                <li><i class="fa fa-home"></i><%= link_to "Home", root_path %></li>
                                <li><i class="fa fa-user"></i><%= link_to "Profile", user_path(current_user) %></li>
                                <li><i class="fa fa-users"></i><%= link_to "Friends", users_path %></li>
                                <li><i class="fa fa-cutlery"></i><%= link_to "Locations", locations_path %></li>
                                <li><i class="fa fa-star"></i><%= link_to "Events", events_path %></li>
                            </ul>
                    <hr>
                    <ul>
                        <li><i class="fa fa-file"></i><%= link_to "Contact", contact_path %></li>
                        <li><i class="fa fa-plug"></i><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                            </ul>
                        </div>
                    </noscript>
                <% end %>
                    <!-- end no script -->

                    <div class="site-info">
                        <div class="primary-info">
                            <h1>SocialEats</h1>
                            <p>Eat lunch with your friends!</a> </p>
                            <div class="email-form" id="main-view-email-form">
                                <%= render partial: 'events/mail_friends', locals: {user: @users}%>
                            </div>
                      </div>
                        <div class="secondary-info">
                            <p>
                                <a class="btn btn-primary" id="menu_invite_button" href="#"><i class="fa fa-user-plus"></i>Invite Friends to Join Social Eats</a>
                            </p>
                        </div>
                    </div>
                </section><!-- end sidebar -->
                <section class="col-md-7 col-sm-12 col-md-offset-5 main-content">
                <% if user_signed_in? %>
                    <div class="sub-nav">
                        <img src="http://i.imgur.com/Ths4eHf.png" height="100" width="100" class="img-circle">
                        <%= link_to "Events", events_path %>
                        <%= link_to "Friends", friendship_path(current_user) %>
                        <%= link_to "Locations", locations_path %>
                        <%= link_to "All Users", users_path %>
                    </div>
                <% end %>
                    <div class="home-page-posts animated fadeIn ">
                      </div>
                      <%= render "layouts/messages" %>
                      <%= yield %>
                    </div><!-- Home page posts -->

                            </section>
                        </div>
                    </div>

                </section><!-- main content -->

            </div> <!--/row -->

        </main> <!-- /container -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    </body>
</html>
