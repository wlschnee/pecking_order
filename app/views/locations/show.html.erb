
<h1><%= @location.name %></h1>

<h3><%= @location.address %> </h3>

<ul>
<% @location.events.each do |event| %>
  <li>
      <%= link_to event.name, event_path(event) %><br>
      <%= event.start_time.strftime("%a, %b %-d, %Y, %I:%M %p") %>
      
      <%  event.guests.each do |guest| %>
          <%= link_to guest.full_name, user_path(guest) %>
      <% end %>
  </li>

<% end %>

<%= link_to like_location_path(@location, likes: true), method: :post do %>
 <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-thumbs-up"></span> <%= @location.thumbs_up_total %>
</a>
 <% end %>
