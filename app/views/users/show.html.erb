
<h1><%= @user.full_name %></h1>

<h3>Upcoming Events</h3>
  <% if @user.upcoming_events.count == 0 %>
    <ul>
      <li>No upcoming events...<% if current_user == @user %> you should:
      <br>
      <br>
      <br>
       <%= link_to "Create a New Event", new_event_path, class:"btn btn-primary" %>
       &nbsp;
       <%= link_to "Attend an Event",  events_path, class:"btn btn-primary" %></li>
       <% end %>
      </ul>
  <% else %>
  <% @user.upcoming_events.each do |event| %>
    <ul>
    <li><h3><%= event.name %></h3></li>
    <li><%= event.location.name %></li>
    <li><%= event.start_time %></li>
    <li>Number of Attendees: <%= event.guests.count + 1 %></li>
    </ul>
    <% end %>
  <% end %>
  <h3>Past Events</h3>
  <% @user.past_events.each do |event| %>
    <ul>
    <li><h3><%= link_to event.name, event_path(event) %></h3></li>
    <li><%= event.location.name %></li>
    <li><%= event.start_time %></li>
    <li>Number of Attendees: <%= event.guests.count + 1 %></li>
    </ul>
    <% end %>


<% if current_user == @user %>
<p><%= link_to "Add Friends", users_path, class:"btn btn-primary" %></p>
<% end %>
<h2> Friends</h2>
<ul>
  <% for friendship in @user.friendships %>
  <li>
    <%= link_to friendship.friend.full_name, user_path(friendship)%>
    <%= link_to "remove", friendship, :method => :delete %>
  </li>
  <% end %>  
  <% for user in @user.inverse_friends %>
  <li><%= user.full_name %></li>
  <% end %>
</ul>




<% if current_user == @user %>
<%= link_to "Edit User", edit_user_path(@user), class: "btn btn-primary" %>
<% end %>
