<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time, :ampm => true, :minute_step => 5 %>
  <%= f.label :location_id %>
  <%= f.collection_select :location_id, Location.all, :id, :name %>
  <%= f.label :meeting_place %>
  <%= f.text_field :meeting_place %>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <%= f.submit %>
<% end %>
