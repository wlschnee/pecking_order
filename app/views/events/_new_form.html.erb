<%= form_for @event do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, :ampm => true, :minute_step => 5 %>
  </div>


    <div class= "location_selector">
      <h2>Select a location:</h2>
      <%= f.fields_for :location, remote: true do |location_form| %>
        <%= location_form.label :name %>
        <%= location_form.autocomplete_field :name, autocomplete_location_name_events_path, :update_elements => {:id => '#event_location_attributes_id', :address => '#event_location_attributes_address' } %><br>
        <%= location_form.label :address %>
        <%= location_form.text_field :address %>
      <% end %> <!-- end location fields -->
    </div>


  <h2>Other details</h2>
  <div>
    <%= f.label :meeting_place %>
    <%= f.text_field :meeting_place %>
  </div>
  <div>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>
  <%= f.submit "Submit", :class => "btn btn-defualt" %>
<% end %>
