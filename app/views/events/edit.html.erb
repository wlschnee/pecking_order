<h1> Edit <%= @event.name %></h1>

<div class="row">
  <div class="col-md-6">
    <%= render 'edit_form' %>
  </div><!-- left-col -->
  <div class="col-md-6" id="right-col">
    <%= form_tag '/search', remote: true do %>
      <%= label_tag 'search', 'Search' %>
      <%= text_field_tag 'search', nil, placeholder: 'Search powered by Yelp' %>
      <%= submit_tag 'Search' %>
    <% end %>
    <div class="search_results">
    </div>
  </div><!-- right-col -->
</div><!-- row -->
<%= link_to "Delete Event", event_path, method: :delete, :class => "btn btn-danger" %>

<%= link_to "Cancel Edit", event_path, :class => "btn btn-warning" %>
